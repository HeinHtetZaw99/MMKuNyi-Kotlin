<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_small"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="@dimen/margin_medium"
    android:paddingBottom="@dimen/margin_medium">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Duration"
            android:layout_margin="@dimen/margin_small"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/jobDetailsDate"
            android:layout_width="@dimen/textview_width_large"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:drawableStart="@drawable/icon_days"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margin_small"
            android:drawablePadding="@dimen/padding_small"
            tools:text="2.1.2018 to  4.1.2018"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/jobDetailsDuration"
            android:layout_width="@dimen/textview_width_large"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:drawableStart="@drawable/icon_days"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margin_small"
            android:drawablePadding="@dimen/padding_small"
            tools:text="3 weeks"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:id="@+id/jobDetailsHours"
            android:layout_width="@dimen/textview_width_large"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            android:drawableStart="@drawable/icon_timer"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/margin_small"
            android:drawablePadding="@dimen/padding_small"
            tools:text="5 hours per day"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_small"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
